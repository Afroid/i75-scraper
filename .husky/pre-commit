#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running lint-staged..."
npx lint-staged

if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix errors before committing."
  exit 1
fi

echo "ğŸ§ª Running unit testsâ€¦"
# Passing --bail so Jest stops on the first failure
npm test -- --bail --silent
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix them before committing."
  exit 1
fi

echo "ğŸ”¨ Running infra unit testsâ€¦"
